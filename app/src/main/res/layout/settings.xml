<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/vaultIpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vaultServerIp" />

    <EditText
        android:id="@+id/vaultServerIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vaultIpText"
        android:inputType="text"
        android:hint="@string/vaultServerIpHint"/>


    <TextView
        android:id="@+id/vaultServerIpPortText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vaultServerIp"
        android:text="@string/vaultServerIpPortText" />

    <EditText
        android:id="@+id/vaultServerIpPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vaultServerIpPortText"
        android:inputType="number"
        android:hint="@string/vaultserverIpPortHint"
        android:text="@string/defaultVaultServerIpPort"/>

    <TextView
        android:id="@+id/vaultTokenText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vaultServerIpPort"
        android:text="@string/vaultToken" />

    <EditText
        android:id="@+id/vaultToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vaultTokenText"
        android:inputType="text" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vaultToken"
        android:text="@string/save" />


</RelativeLayout>
